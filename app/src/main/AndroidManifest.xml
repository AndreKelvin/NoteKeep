<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.notekeep.andrekelvin.notekeep">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:fullBackupContent="true">
        <receiver
            android:name="com.notekeep.andrekelvin.notekeep.ReminderReceiver"
            android:enabled="true"
            android:exported="true"/>

        <activity
            android:name="com.notekeep.andrekelvin.notekeep.MainActivity"
            android:launchMode="singleTop"
            android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.notekeep.andrekelvin.notekeep.AddNoteActivity" />
        <activity android:name="com.notekeep.andrekelvin.notekeep.EditNoteActivity" />
    </application>

</manifest>